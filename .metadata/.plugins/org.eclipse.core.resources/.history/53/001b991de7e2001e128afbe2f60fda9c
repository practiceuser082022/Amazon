package com.amazon.pageoperations;

import org.openqa.selenium.WebDriver;

public class CommonPageOperations {

	WebDriver driver;

	public CommonPageOperations(WebDriver driver) {
		
		this.driver = driver;
	}
	
	public void switchToChild() {
		
		import java.util.Set;

		// Get the current window handle
		String mainWindowHandle = driver.getWindowHandle();

		// Perform an action that opens a new window or tab (e.g., clicking a link that opens in a new tab)
		// Your code to perform the action that opens a new window or tab goes here...

		// Get handles of all windows or tabs
		Set<String> allWindowHandles = driver.getWindowHandles();

		// Iterate over all window handles
		for (String handle : allWindowHandles) {
		    // Switch to the window with the handle different from the current window handle
		    if (!handle.equals(mainWindowHandle)) {
		        driver.switchTo().window(handle);
		        break; // Break out of the loop after switching to the desired window
		    }
		}

		// Now you are switched to the new window or tab, perform actions on it as needed

		// To switch back to the main window, you can use:
		// driver.switchTo().window(mainWindowHandle);

		
	}
	
	public void switchToParent() {
		
	}
}

package com.amazon.pageobjects;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class ProductPage {

	WebDriver driver;

	public ProductPage(WebDriver driver) {

		this.driver = driver;
	}
	
	By navCartIcon=By.id("nav-cart-count");
	By addToCartBtn=By.id("add-to-cart-button");
	By aCartBtn=By.id("a-button-input");
	
	By cartItemsCount=By.xpath("//*[@class='a-truncate-cut']");
	
	public WebElement getViewCart() {
		
		return driver.findElement(navCartIcon);
	}
	
	public WebElement getAddCartButton() {
		
		return driver.findElement(addToCartBtn);
	}
	
	public WebElement getACartButton() {
		
		return driver.findElement(aCartBtn);
	}
	
	public List<WebElement> getCartItem() {
		
		return driver.findElements(cartItemsCount);
	}
}
